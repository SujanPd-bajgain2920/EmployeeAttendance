@{
    Layout = "_StaticLayout";
}

<!-- Dashboard -->
<div class="container my-5">
    <h2 class="mb-4">Employee Attendance Dashboard</h2>

    <!-- Attendance Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Employees</h5>
                    <p class="card-text display-6">150</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Present Today</h5>
                    <p class="card-text display-6">145</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-body">
                    <h5 class="card-title">Absent Today</h5>
                    <p class="card-text display-6">5</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">On Leave</h5>
                    <p class="card-text display-6">10</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Attendance Table -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Employee ID</th>
                    <th>Employee Name</th>
                    <th>Department</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>EMP001</td>
                    <td>John Doe</td>
                    <td>Sales</td>
                    <td>2024-08-19</td>
                    <td><span class="badge bg-success">Present</span></td>
                    <td>
                        <button class="btn btn-sm btn-primary">View</button>
                        <button class="btn btn-sm btn-danger">Edit</button>
                    </td>
                </tr>
                <tr>
                    <td>EMP002</td>
                    <td>Jane Smith</td>
                    <td>HR</td>
                    <td>2024-08-19</td>
                    <td><span class="badge bg-danger">Absent</span></td>
                    <td>
                        <button class="btn btn-sm btn-primary">View</button>
                        <button class="btn btn-sm btn-danger">Edit</button>
                    </td>
                </tr>
                <!-- Add more employee rows as needed -->
            </tbody>
        </table>
    </div>
</div>