@model EmployeeListEdit
@{
    Layout = "_StaticLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            background: linear-gradient(to bottom right, #7386D5, #6A75C8);
            overflow: hidden;
            font-family: 'Arial', sans-serif;
        }

        .container-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .register-container {
            background: rgba(255, 255, 255, 0.4); /* Increased opacity for better contrast */
            padding: 40px 30px;
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 500px;
            text-align: center;
            backdrop-filter: blur(15px);
            transform: scale(0.8);
            opacity: 0;
            transition: transform 0.8s ease-out, opacity 0.8s ease-out;
            z-index: 10;
        }

            .register-container.visible {
                transform: scale(1);
                opacity: 1;
            }

            .register-container h3 {
                margin-bottom: 30px;
                color: #fff;
                font-weight: bold;
                letter-spacing: 1px;
                text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
            }

        .form-control {
            background: rgba(255, 255, 255, 0.8); /* Make form fields less transparent */
            border-radius: 30px;
            margin-bottom: 15px;
            padding: 10px 20px;
            font-size: 16px;
            color: #333; /* Darker color for better readability */
            border: none;
            transition: background-color 0.3s ease-in-out, transform 0.3s ease-in-out;
        }

            .form-control:focus {
                background: rgba(255, 255, 255, 1); /* Fully opaque on focus */
                outline: none;
                transform: scale(1.02);
                box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
            }

        .btn-register {
            background-color: #333;
            border: none;
            border-radius: 30px;
            padding: 10px 30px;
            color: white;
            font-size: 16px;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            transition: background-color 0.3s ease-in-out, transform 0.3s ease-in-out;
        }

            .btn-register::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 300%;
                height: 300%;
                background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.5) 100%);
                transition: transform 0.3s ease-in-out;
                transform: translate(-50%, -50%) scale(0);
                border-radius: 50%;
                z-index: 0;
            }

            .btn-register:hover::before {
                transform: translate(-50%, -50%) scale(1);
            }

            .btn-register:hover {
                background-color: #555;
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
            }
    </style>

</head>
<body>

    <div class="container-wrapper">
        <div class="register-container">
            <h3>Register</h3>
            <form asp-action="Register" asp-controller="Account">
                <input asp-for="EmpName" class="form-control" placeholder="Full Name">
                <input asp-for="EmpEmail" class="form-control" placeholder="Email Address">
                <input asp-for="LoginPassword" type="password" class="form-control" placeholder="Password">
                <input asp-for="ProfilePicture" type="File" class="form-control" placeholder="Image">
                <input asp-for="EmpPhone" class="form-control" placeholder="Phone Number">
                <input asp-for="Designation" class="form-control" placeholder="Designation">
                <button type="submit" class="btn btn-register mt-3">Register</button>
            </form>
        </div>
    </div>
    <div class="background">
        <div class="character">
            <img src="~/Images/man.png" alt="Character">
        </div>
    </div>
    <div class="background-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
    </div>
    <script>
        window.onload = function () {
            document.querySelector('.register-container').classList.add('visible');
            let character = document.querySelector('.character');

            let move = 0;
            setInterval(function () {
                move = (move === 0) ? 20 : 0;
                character.style.transform = `translateY(${move}px)`; // Use backticks for template literal
            }, 1000);
        };
    </script>

</body>
</html>