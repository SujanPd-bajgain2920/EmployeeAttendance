@model EmployeeAttendance.Models.AttendanceEdit

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Attendance Report</title>
    <style>
        /* Add styles for the PDF */
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            margin: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        .badge {
            padding: 5px;
            border-radius: 4px;
        }

        .bg-success {
            background-color: #28a745;
            color: white;
        }

        .bg-danger {
            background-color: #dc3545;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Attendance Report</h1>
        <p>Date: @Model.StartDate?.ToShortDateString()</p>
        <table>
            <thead>
                <tr>
                    <th>SN</th>
                    <th>Employee Name</th>
                    <th>Designation</th>
                    <th>Date In</th>
                    <th>Time In</th>
                    <th>Date Out</th>
                    <th>Time Out</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.AttendanceRecords.Count; i++)
                {
                    var item = Model.AttendanceRecords[i];
                    var statusClass = item.DateOut.HasValue ? "bg-success" : "bg-danger";
                    var statusText = item.DateOut.HasValue ? "Present" : "Absent";

                    <tr>
                        <td>@(i + 1)</td>
                        <td>@item.employeeName</td>
                        <td>@item.post</td>
                        <td>@item.DateIn.ToShortDateString()</td>
                        <td>@(item.TimeIn.HasValue ? item.TimeIn.Value.ToString("hh:mm tt") : "N/A")</td>
                        <td>@(item.DateOut.HasValue ? item.DateOut.Value.ToShortDateString() : "N/A")</td>
                        <td>@(item.TimeOut.HasValue ? item.TimeOut.Value.ToString("hh:mm tt") : "N/A")</td>
                        <td>
                            <span class="badge @statusClass">
                                @statusText
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p>Total Present: @Model.TotalPresent</p>
    </div>
</body>
</html>
