@model EmployeeListEdit

@{
    Layout = "_StaticLayout";
}

 <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4 shadow-sm" style="width: 20rem;">
            <h3 class="card-title text-center mb-4">Login</h3>
            <form asp-action="Login" method="post" asp-controller="Account">
            <!-- Validation summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <label asp-for="EmpEmail" class="form-label">Email address</label>
                    <input asp-for="EmpEmail" type="email" class="form-control" id="email" required>
                <span asp-validation-for="EmpName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="LoginPassword" class="form-label">Password</label>
                    <input asp-for="LoginPassword" type="password" class="form-control" id="password" required>
                    <span asp-validation-for="EmpName" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
            <div class="mt-3 text-center">
                <p class="mb-0">Don't have an account? <a asp-action="Register" asp-controller="Account">Register here</a></p>
            </div>
        </div>
    </div>