@model EmployeeListEdit
@{
    ViewData["Title"] = "Profile Update";
}
<style>
    .profile-container {
        text-align: center;
    }

    .profile-picture img {
        display: block;
        margin: 0 auto;
        border-radius: 50%;
        width: 128px;
        height: 128px;
    }

    .hidden {
        display: none;
    }

    .form-label {
        font-size: 0.875rem;
        color: #6b7280;
    }

    .form-input {
        border: 1px solid #d1d5db;
        border-radius: 0.375rem;
        padding: 0.625rem 1rem;
        font-size: 0.875rem;
    }

        .form-input:focus {
            border-color: #3b82f6;
            outline: none;
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.3);
        }

    .btn-primary {
        background-color: #3b82f6;
        color: #ffffff;
        padding: 0.625rem 1.25rem;
        border: none;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
    }

        .btn-primary:hover {
            background-color: #2563eb;
        }

    .btn-secondary {
        background-color: #ef4444;
        color: #ffffff;
        padding: 0.625rem 1.25rem;
        border: none;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
    }

        .btn-secondary:hover {
            background-color: #dc2626;
        }

    .form-group {
        margin-bottom: 1.25rem;
    }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
        }
</style>

<div class="container mx-auto p-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Profile View -->
        <div class="profile-container">
            <div class="profile-picture mb-4">
                <img src="~/EmpImage/@Model.ProfilePicture" alt="Profile Picture" />
            </div>
            <div class="profile-details mb-4">
                <p><strong>Email Address:</strong> @Model.EmpEmail</p>
                <p><strong>Full Name:</strong> @Model.EmpName</p>
                <p><strong>Phone:</strong> @Model.EmpPhone</p>
            </div>
            <button id="editButton" class="btn-primary mb-4">Edit Profile</button>
            <a asp-action="Index" class="text-blue-600 hover:underline">Back to Home</a>
        </div>

        <!-- Edit Form -->
        <div class="mx-auto hidden max-w-md" id="profileFormContainer">
            <form asp-action="ProfileUpdate" asp-controller="Home" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

                <input type="hidden" asp-for="EmpId" />
                <input asp-for="UserRole" hidden />
                <input asp-for="LoginPassword" hidden />
                <input asp-for="ProfilePicture" hidden />

                <div class="form-group">
                    <label asp-for="EmpName" class="form-label">Full Name</label>
                    <input asp-for="EmpName" type="text" class="form-input" placeholder="Enter full name" required />
                    <span asp-validation-for="EmpName" class="text-red-500"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmpEmail" class="form-label">Email Address</label>
                    <input asp-for="EmpEmail" type="email" class="form-input" placeholder="Enter email address" required />
                    <span asp-validation-for="EmpEmail" class="text-red-500"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmpPhone" class="form-label">Current Address</label>
                    <input asp-for="EmpPhone" type="text" class="form-input" placeholder="Enter current address" required />
                    <span asp-validation-for="EmpPhone" class="text-red-500"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmpFile" class="form-label">Upload Photo</label>
                    <input asp-for="EmpFile" type="file" class="form-input" required />
                    <span asp-validation-for="EmpFile" class="text-red-500"></span>
                </div>

                <div class="flex justify-between">
                    <button type="submit" class="btn-primary">Save Changes</button>
                    <button type="button" id="cancelButton" class="btn-secondary">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById("editButton").addEventListener("click", function () {
        document.getElementById("profileFormContainer").classList.remove("hidden");
    });

    document.getElementById("cancelButton").addEventListener("click", function () {
        document.getElementById("profileFormContainer").classList.add("hidden");
    });
</script>
